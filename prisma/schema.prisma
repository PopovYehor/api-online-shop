generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type CatalogsRating {
  count Int
  rate  Int
}

type OrdersCart {
  category    String
  count       Int
  description String
  id          String
  image       String
  price       Int
  rating      OrdersCartRating
  summPrice   Int
  title       String
  v           Int?           @map("__v")
}

type OrdersCartRating {
  count Int
  rate  Int
}

model catalogs {
  id          String         @id @default(auto()) @map("_id") @db.ObjectId
  v           Int?           @map("__v")
  category    String
  description String
  image       String
  price       Json
  rating      CatalogsRating
  title       String
}

model orders {
  id             String       @id @default(auto()) @map("_id") @db.ObjectId
  cart           OrdersCart[]
  deliveryAddres String
  deliveryType   String
  email          String
  name           String
  paymentType    String
  phone          String
}
